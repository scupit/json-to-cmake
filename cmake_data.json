{
    "defaultCppStandard": "17",

    "output": {
        "gcmake": {
            "type": "executable",
            "mainFile": "main.cpp",
            "rSourceDirs": [ "src" ],
            "rHeaderDirs": [ "include" ],
            "includeDirs": [ "include" ]
        }
    },

    "outputGroups": {
        "testing": {
            "type": "executable",
            "rSourceDirs": [ "src" ],
            "rHeaderDirs": [ "include" ],
            "includeDirs": [ "include" ],
            "outputs": {
                "visualize-links": {
                    "mainFile": "tests/visualize-link-tree-main.cpp"
                }
            }
        }
    },

    "importedLibs": {
        "JSON": {
            "gitRepo": "https://github.com/scupit/JSON-in-cpp.git",
            "cloneRepo": true,
            "rootDir": "dep/lib/JSON",
            "libFiles": [
                "jParser"
            ],
            "rHeaderDirs": [ "dep/include/JSON" ],
            "includeDirs": [ "dep/include"]
        }
    },

    "links": {
        "gen-cmake": [
            "JSON"
        ],
        "testing": [
            "JSON"
        ]
    },

    "buildTargets": {
        "Debug": {
            "compilerFlags": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors"
            ]
        },

        "Release": {
            "compilerFlags": [
                "-O2",
                "-s"
            ],
            "defines": [
                "NDEBUG"
            ]
        }
    }
}
